@model List<Portfolio>
  <div class="row gy-4 portfolio-container">
      @foreach (var item in Model)
    {
        <div class="col-xl-4 col-md-6 portfolio-item filter-app">
            <div class="portfolio-wrap">
                <a href="~/assets/img/portfolio/@item.Image" data-gallery="portfolio-gallery-app" class="glightbox"><img src="~/assets/img/portfolio/@item.Image" class="img-fluid" alt=""></a>
                <div class="portfolio-info">
                    <h4><a href="portfolio-details.html" title="More Details">@item.Title</a></h4>
                    <p>@item.Desc</p>
                </div>
            </div>
        </div>
        <!-- End Portfolio Item -->
    }

             


  </div><!-- End Portfolio Container -->